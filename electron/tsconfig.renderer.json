// tsconfig.renderer.json - Strict config for renderer layer
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "isolatedModules": true,
    "types": ["vite/client"],
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/renderer/**/*.tsx"
  ]
}
