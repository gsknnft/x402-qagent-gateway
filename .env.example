# X402 Configuration
# Copy this file to .env and fill in your values for local development

# Your Solana wallet address that will receive payments
# This is where all payments will be sent
NEXT_PUBLIC_RECEIVER_ADDRESS=CmGgLQL36Y9ubtTsy2zmE46TAxwCBm66onZmPPhUWNqv

# Solana network to use
# Options: solana-devnet, solana-mainnet-beta, solana-testnet
# Use devnet for testing with fake tokens, mainnet for production with real money
NEXT_PUBLIC_NETWORK=solana-devnet
NETWORK=solana-devnet

# Facilitator URL
# The service that verifies payments on the blockchain
# For local demo with Kora: http://localhost:3000
# Production: https://x402.org/facilitator
NEXT_PUBLIC_FACILITATOR_URL=http://localhost:3000
FACILITATOR_URL=http://localhost:3000

# Kora RPC Configuration (for local demo/development)
# This connects to the Kora signing service for gasless transactions
KORA_RPC_URL=http://localhost:8080
KORA_API_KEY=demo_api_key_non_production

# Facilitator Port (for local development)
FACILITATOR_PORT=3000

# Coinbase Developer Platform Client Key
# Get this from: https://portal.cdp.coinbase.com/
# This enables Coinbase Pay for user payments
NEXT_PUBLIC_CDP_CLIENT_KEY=your_client_key_here

# Demo Mode - set to 'skip' to bypass actual blockchain transactions
# This is for non-production hackathon demo only
NEXT_PUBLIC_X402_DEMO_MODE=skip

# Seller Service Configuration
SELLER_ADDRESS=9iGq3Y62Uva9AKAsM63WtAuggdLQUz6LUCuy8ANRjMEN
SELLER_ENDPOINT=http://localhost:3001/api/transform